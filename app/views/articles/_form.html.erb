<div class="container">
  <div class="row justify-content-center ">
    <div class="col-10">
      <%= render "shared/errors",obj:@article %>
      <%= form_with(model: @article ,class:"shadow-lg p-3 mb-5 bg-body-tertiary rounded",local:true) do |f| %>
        <div class="row mb-3">
          <%= f.label :title,class:"form-label col-2" %>
          <div class="col-10">
            <%= f.text_field :title,class:"form-control shadow rounded",placeholder:"Title of article" %>
          </div>
        </div>
        <div class="row mb-3">
          <%= f.label :content,class:"form-label col-2"%>
          <div class="col-10">
            <%= f.rich_text_area :content,rows:10 ,class:"form-control shadow rounded",placeholder:"content of article" %>
          </div>
        </div>
        <div class="row mb-3">
          <%= f.label :category,class:"form-label col-2"%>
          <div class="col-10">
              <%= f.collection_select :category_ids, Category.all, :id, :name, { prompt: "Make your selection from the list below (can be empty)"}, { multiple: true,  size:3,class: "form-select shadow rounded" } %>
          </div>
        </div>
        <div class="row justify-content-center mt-4 mb-3">
          <%= f.submit class:"col-5 btn btn-secondary btn-lg" %>
        </div>
      <% end %>
      <div class="row justify-content-center ">
        <%= link_to 'Return to articles listing', articles_path, class:"text-center" %>
      </div>
    </div>
  </div>
</div>