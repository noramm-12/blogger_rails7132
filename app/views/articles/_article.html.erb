<div class="container .bg-secondary-subtle">
  <% @articles.each do |article| %>
    <div class="row justify-content-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-body-tertiary rounded">
          <div class="card-header fst-italic">
            <% if article.user %> by <%=link_to article.user.username, user_path(article.user) %>
                <% end%>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to article.title, article_path(article), class:"text-success" %>
            </h5>
            <p class="card-text">
              <%= truncate(article.description, length:10) %>
            </p>
            <div id="button-group" class="justify-content-center d-flex">
              <%= link_to "View" , article_path(article), class:"btn btn-outline-success me-2" %>
                <% if logged_in? && (article.user==current_user || current_user.admin?) %>
                  <%= link_to "Edit" , edit_article_path(article), class:"btn btn-outline-primary me-2" %>
                    <%= link_to 'Delete' , article_path(article), class:"btn btn-outline-danger", data: { turbo_method:
                      :delete,turbo_confirm: "Are you sure?" }%>
                      <% end %>
            </div>
          </div>
          <div class="card-footer text-body-secondary">
            <small>created <%= time_ago_in_words(article.created_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
    <% end %>
</div>