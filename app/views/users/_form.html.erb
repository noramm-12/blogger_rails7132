<div class="container">
  <div class="row justify-content-center ">
    <div class="col-10">
      <%= render "shared/errors", obj:@user %>
      <%= form_with(model: @user ,class:"shadow-lg p-3 mb-5 bg-body-tertiary rounded",local:true) do |f| %>
        <div class="row mb-3">
          <%= f.label :username,class:"form-label col-2" %>
          <div class="col-10">
            <%= f.text_field :username,class:"form-control shadow rounded",placeholder:"enter a username" %>
          </div>
        </div>
        <div class="row mb-3">
          <%= f.label :email,class:"form-label col-2"%>
          <div class="col-10">
            <%= f.text_area :email,class:"form-control shadow rounded",placeholder:"enter a email" %>
          </div>
        </div>
        <div class="row mb-3">
          <%= f.label :password,class:"form-label col-2"%>
          <div class="col-10">
            <%= f.text_area :password,class:"form-control shadow rounded",placeholder:"enter a password" %>
          </div>
        </div>
        <div class="row justify-content-center mt-4 mb-3">
          <%= f.submit class:"col-5 btn btn-secondary btn-lg" %>
        </div>
      <% end %>
      <div class="row justify-content-center ">
        <!--<%= link_to 'Return to articles listing', articles_path, class:"text-center" %>-->
      </div>
    </div>
  </div>
</div>